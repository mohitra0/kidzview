    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="container">
            <div class="hero-content single">
                <div class="hero-text center">
                    <h1 class="hero-title">
                        Live Streaming for
                        <span class="italic-text">PlaySchools</span>
