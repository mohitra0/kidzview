        <div class="container">
            <h2 class="impact-title">
                Advanced live streaming solution designed by senior consultants
                <span class="impact-sub">with 10+ years experience delivering</span>
            </h2>
            <div class="impact-pills">
                <span class="impact-pill lilac"><i class="bi bi-shield-check"></i> Privacy First</span>
                <span class="impact-pill blue"><i class="bi bi-lightning-charge"></i> Modern Technology</span>
                <span class="impact-pill amber"><i class="bi bi-trophy"></i> Expert Team</span>
            </div>
            <div class="impact-metrics">
                <div class="metric">
                    <div class="metric-value">8</div>
                    <div class="metric-label">HD Cameras Included</div>
                </div>
                <div class="metric">
                    <div class="metric-value">96</div>
                    <div class="metric-label">% Uptime Guaranteed</div>
                </div>
                <div class="metric">
                    <div class="metric-value">30</div>
                    <div class="metric-label">Days Video Storage</div>
                </div>
            </div>
            <div class="impact-stats">
                <div class="stat-chip">
                    <i class="bi bi-people"></i>
                    <span class="stat-chip-number">Unlimited</span>
                    <span class="stat-chip-label">Parent Access</span>
                </div>
                <div class="stat-chip">
                    <i class="bi bi-display"></i>
                    <span class="stat-chip-number">420P - 720P</span>
                    <span class="stat-chip-label">HD Quality</span>
                </div>
                <div class="stat-chip">
                    <i class="bi bi-download"></i>
                    <span class="stat-chip-number">Downloadable</span>
                    <span class="stat-chip-label">Last Month Videos</span>
                </div>
            </div>
        </div>
    </section>
    <!-- Features Section -->
    <section id="features" class="features">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Where technology meets <span class="italic-text light-text">childcare</span></h2>
            </div>
            <div class="services-grid">
                <div class="service-card purple">
                    <div class="service-icon">
                        <i class="bi bi-camera-video"></i>
                    </div>
                    <h3 class="service-title">Live Streaming</h3>
                </div>
                <div class="service-card pink">
                    <div class="service-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="service-title">Privacy & Security</h3>
                </div>
                <div class="service-card blue">
                    <div class="service-icon">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h3 class="service-title">Mobile Application</h3>
                </div>
                <div class="service-card orange">
                    <div class="service-icon">
                        <i class="bi bi-laptop"></i>
                    </div>
                    <h3 class="service-title">Website Portal</h3>
                </div>
                <div class="service-card green">
                    <div class="service-icon">
                        <i class="bi bi-bar-chart"></i>
                    </div>
                    <h3 class="service-title">Analytics & Reports</h3>
                </div>
            </div>
            <div class="features-cta">
